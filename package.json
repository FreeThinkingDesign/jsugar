{
  "name": "jsugar",
  "version": "0.1.0",
  "description": "A low level REST API Client for SugarCRM.",
  "main": "index.js",
  "scripts": {
    "test": "istanbul cover -x ./test/main.js _mocha -- -R spec ./test/main.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 85 --functions 100 --lines 100",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/jsugar.git"
  },
  "keywords": [
    "rest api",
    "sugarcrm"
  ],
  "author": "jclo <jclo@mobilabs.fr> (http://www.mobilabs.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/jsugar/issues"
  },
  "homepage": "https://github.com/jclo/jsugar",
  "dependencies": {},
  "devDependencies": {
    "chai": "3.4.1",
    "coveralls": "2.11.6",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.3.4",
    "opener": "1.4.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
